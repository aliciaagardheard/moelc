<header>
  <%= image_tag('bear.jpeg', :size => "50x50")%> <h2> Mt Olive Early Learning Center </h2> <%= image_tag('bear.jpeg', :size => "50x50") %>
  <h3>Where love abides and joy goes home!</h3>
  <div id="nav">
    <ul>
      <li><%= link_to "Home", :action  => "home", :controller => "home"%></li>
      <li><%= link_to "About", :action  => "about", :controller => "about"%></li>
      <li><%= link_to "Contact", :action  => "contact", :controller => "contact"%></li>
    </ul>
  </div>
</header>

<div id="body">

  <div id="place">
    <address>
      <p> We are located at: </p>
      <p> 3366 Mt. Olive Rd </p>
      <p> East Point GA 30344 </p>
    </address>
  </div>

  <div align="center">
    <h3>Send A message to Us</h3>

    <%= simple_form_for :html do |f| %>
        <%= f.input :name, :required => true %>
        <%= f.input :email, :required => true %>
        <%= f.input :message, :as => :text, :required => true %>
        <div class= "hidden">
          <%= f.input :nickname, :hint => 'Leave this field blank!' %>
        </div>
        <div>
          </br>
          <%= f.button :submit, 'Send message', :class=> "btn btn-primary" %>
        </div>
    <% end %>
  </div>
</div>

<footer>
  <h6>Mt Olive Early Learning Center is closely affiliated with Mt Olive Seventh Day
    Adventist Church. </h6>
  <%=link_to nil,"http://www.mtolivesda.com/"%>
</footer>